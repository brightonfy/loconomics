/** Activity component **/

@import 'ActivityNavbar.styl';

Activity() {
    // Corretly getting space, scrolling context and fixing SmartNavBar
    overflow: auto;    
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    
    /* activity must be notified of the navbar to fix
       available space
    */
    &.has-navbar {
        bottom: $activityNavbarHeight;
    }

    // media-app-navbar and big
    top: $app-navbar-height;
    @media $media-big-navbar {
        top: $big-navbar-height;
    }
}

.Activity,
[data-activity] {
    Activity();
}
