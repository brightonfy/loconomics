/**
    MessageTile
**/
.MessageTile {
    
    padding: 16px 0;
    border-bottom: 1px solid $gray-lighter;
    
    // The tile can be a link, so ensure
    // some details
    color: $body-copy-color;
    display: block;
    text-decoration: none !important;
    
    .MessageTile-contact {
        font-size: 1.1em;
        font-weight: bold;
        display: inline;
    }
    
    .MessageTile-time {
        color: $gray-light;
        float: right;
    }
    
    .MessageTile-body {
        margin: .6em 0 0 0;
    }
    
    strong {
        font-weight: bold;
    }
    
    //$colors = 'primary' 'success' 'info' 'warning' 'danger'
    for $color in $brand-colors {
        &.MessageTile--tag-{$color} {
            strong {
                color: $brand-colors[$color];
            }
        }
    }
}
