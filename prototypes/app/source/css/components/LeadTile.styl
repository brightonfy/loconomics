/**
    LeadTile: a big, page leading, tile with important information
    highlighted on top the rest.
    
    Used for the Upcoming Booking on dashboard, but made reusable.
**/

.LeadTile {
    text-align: left;
    
    // Content can be wrapped in a link
    > a {
        display: block;
        color: $body-copy-color;
        
        &:hover {
            text-decoration: none;
        }
    }

    .LeadTile-title {
        font-size: 2.6em;
        color: $brand-primary;
        line-height: 1em;
        margin: .6em 0;
    }
    
    .LeadTile-subtitle {
        font-weight: bold;
        font-size: 1.2em;
        color: $body-copy-color;
        line-height: 1em;
        margin: .5em 0;
    }
    
    .LeadTile-content {
        margin-bottom: 1em;

        em {
            color: $gray-light;
        }
    }
}
