/**
    Calendar activity styles
**/
// @require 'ActivityTitle.styl';

[data-activity=calendar] {

    #calendarDailyView {
        padding-top: $activityTitleHeight;
    }

    #calendarDateHeader {
        position: fixed;
        z-index: 100;
        background: White;
    }

    #calendarDatePicker {
        /* positioning */
        position: fixed;
        left: 10px;
        right: 10px;
        z-index: 100;
        top: $activityTitleInnerHeight + $app-navbar-height;
        
        /* pop-up decoration */
        background: white;
        box-shadow: 0 0 6px 1px #000;
        border-radius: 4px;

        /* repositioning the pop-arrow */
        .DatePicker:after {
            left: 50%;
        }
        .DatePicker:before {
            left: 50%;
            margin-left: -1px;
        }

        /** smooth transition and visible state **/
        opacity: 0;
        transform: translateY(-15px);
        transition: 500ms all;
        pointer-events: none;

        &.is-visible {
            opacity: 1;
            transform: translateY(0);
            pointer-events: all;
        }
    }
}
