/**
    Home page styles (aka Search page)
**/

@import '../utils/input-group-addon-inset.styl';
@import '../utils/arrows.styl';
@import '../components/WebsiteFooter.styl';
@import '../components/SideMenu.styl';

[data-activity=home] {
    $homeHeaderHeight = 56px;
    
    // NO NAVBAR, disabled on the JS activity, so this can replace the default:
    top: 0 !important;
    
    // NOTE: all activities are absolute positioned
    
    header {
        height: $homeHeaderHeight;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        
        .home-brand {
            position: absolute;
            top: 13px;
            left: 28px;
            
            display: block;
            text-indent: -99999px;
            background: url("../images/logo-loconomics-white-mini.png") no-repeat center;
            hr-image("../images/logo-loconomics-white-mini@2x.png", 100px, 38px);
            width: 100px;
            height: 38px;
        }
        
        .home-nav {
            position: absolute;
            top: 13px;
            right: 40px;
            
            > ul {
                list-style: none;
                padding: 0;
                margin: 0;
                font-size: 0;
                
                > li {
                    display: inline-block;
                    margin: 0 18px;
                    
                    // For the help link to get dropdown in the correct place
                    position: relative;
                    > .dropdown-menu {
                        right: 0;
                        left: auto;
                    }
                    
                    // Used along .btn.btn-link
                    > a {
                        font-size: 16px;
                        color: White;
                        font-weight: bold;
                        // With links using btn btn-link, just adjust line to get the desired block size
                        line-height: 26px;
                    }
                }
            }
        }
        
        // Home collapsed menu styles
        .home-menu {
            // Only on mobile, so hide by default
            display: none;
            
            // Its style:
            position: absolute;
            left: 0;
            top: 7px;
            
            .dropdown-toggle {
                font-size: 30px;
                color: White;
            }

            .dropdown-menu {
            }
        }
        
        // On mobile:
        // - show menu button
        // - hide standard navbar
        // - move brand to center
        @media $mediaMaxXs {
            .home-menu {
                display: block;
            }
            
            .home-nav {
                display: none;
            }
            
            .home-brand {
                position: static;
                margin: 13px auto 0;
            }
        }
    }
    
    [role=main] {
        $arrowSize = 30px;
        
        padding-top: $homeHeaderHeight + 40px;
        background: rgb(79, 184, 185);
        
        .home-title {
            color: White;
            font-size: 44px;
            font-weight: bold;
            margin: 0.4em auto;
            text-align: center
        }

        .home-tagline {
            color: White;
            font-size: 24px;
            margin: 0.5em auto;
            text-align: center;
        }
        
        // Edge limit for phone
        .home-title,
        .home-tagline {
            padding: 0 $grid-gap;
        }
        
        form {
            margin: 40px auto;
            max-width: 700px;
            
            .form-control {
                background: White;
            }
            
            // Reduce column gaps by a 20px in total
            // for sizes bigger than XS (so keep standar in phone where
            // forms goes vertical)
            @media $mediaMinSm {
                > * {
                    padding-left: 10px;
                    padding-right: 10px;
                }
            }
        }
        
        .home-section-title {
            color: White;
            font-size: 32px;
            font-weight: bold;
            margin: 0 auto;
            padding: 0.4em $grid-gap;
            text-align: center
        }
        
        // How It Works section
        .home-hiw {
            text-align: center;
            color: $gray;
            background: White;
            down-arrow($arrowSize, 0, none, White, center);
            
            $iconsSize = 90px;
            
            ul {
                margin-top: ($iconsSize / 2) + 20px;
                margin-bottom: 0;
                padding-bottom: ($iconsSize / 2);
                
                > li {
                    margin-top: (0 - $iconsSize / 2);
                }
            }
            
            h3 {
                font-weight: bold;
                font-size: 22px;
            }
            
            // icons
            i {
                background: $brand-secondary-background;
                font-size: floor($iconsSize / 1.60);
                border-radius: 100%;
                width: $iconsSize;
                line-height: $iconsSize;
                color: White;
            }
            
            /// Move everything up to show title and half icons out of the
            /// box and out of the background, while keeping separation with previous section;
            // Manually calculated:
            $offset = 126px;
            position: relative;
            top: $offset;
            .home-section-title,
            .home-section-listing {
                position: relative;
                top: (0 - $offset);
            }
            &:after,
            &:before {
                bottom: ($offset - $arrowSize);
            }
            
            // Just rows in extra-small size (html is set to use 3 Bootstrap columns from col-sm and up)
            @media $mediaMaxXs {
                ul {
                    // Just this to keep the effect of first icon half in/out the background
                    margin-top: 0;
                    // And add margin to separate each item, now in vertical
                    > li {
                        margin-top: 20px;
                    }
                }
            }
        }
        
        // Why book on Loconomics section
        .home-booking {
            $boxSize = 340px;
            $boxMargin = 1.5%;

            background: $brand-secondary-background;
            text-align: center;
            padding-top: 40px;

            down-arrow($arrowSize, 0, none, $brand-secondary, center);

            ul {
                color: $gray;
                text-align: center;
                margin: 0 auto;
                padding-bottom: 10px;
                // 3 boxes limit: UPDATE on each size or margin change
                max-width: 1200px;

                li {
                    background: White;
                    //float: left;
                    display: inline-block;
                    width: $boxSize;
                    margin: $boxMargin;
                    padding: 16px;
                    vertical-align: middle;
                    
                    // On small sizes 2 columns does not fits so
                    // (using XS/mobile now -- is close enough to the actual needed size) 
                    // it automatically gets 1 column but needs to manage size so it
                    // shrinks automatically for smaller screens using current fixed size
                    // as maximum size (to don't let to appear too wide on sizes in the middle
                    // of the breakpoint and card size).
                    // Margin is auto for centering and added gap on list container
                    @media $mediaMaxXs {
                        width: auto;
                        display: block;
                        max-width: $boxSize;
                        margin: $grid-gap auto;
                    }
                    
                    a {
                        color: $brand-secondary;
                        font-weight: bold;
                    }
                    
                    h3 {
                        font-size: 15px;
                        font-weight: bold;
                    }
                }
                
                // Setting margin for small screens since the items margin is auto there
                @media $mediaMaxXs {
                    margin: 0 $grid-gap;
                }
                
                // icons
                i {
                    color: $brand-secondary;
                    font-size: 3em;
                    display: block;
                }
            }
            
            .home-booking-more {
                width: $boxSize;
                margin: auto;
                padding-bottom: 2em;
                
                @media $mediaMaxXs {
                    width: auto;
                    display: block;
                    margin: 0 $grid-gap;
                    
                    > .btn {
                        max-width: $boxSize;
                        margin: 0 auto;
                    }
                }

                .btn {
                    border-color: White;
                }
            }
        }
        
        .home-categories {
            $boxSize = 240px;
            $boxMargin = 1.5%;
            
            background: $gray-background;
            text-align: center;
            padding-top: 40px;
            
            h2 {
                color: $gray;
            }
            
            ul {
                color: $gray;
                text-align: center;
                margin: 0 auto;
                padding-bottom: 10px;
                // 4 boxes limit: UPDATE on each size or margin change
                max-width: 1200px;

                li {
                    // TODO Add background photo per category
                    background: White no-repeat top center;
                    background-size: contain;
                    display: inline-block;
                    width: $boxSize;
                    margin: $boxMargin;
                    padding: 12px;
                    vertical-align: middle;
                    
                    // For a small size where only one card fits the space (~pixels)
                    // use an automatic width so the card does not looks with lot of
                    // margin space and fits on sizes smaller than original card size,
                    // but keeping a maximum size so it does not looks too wide.
                    // On the beggining, the XS breakpoint was used, but was too wide
                    // and lot of devices still hold two columns easily, so custom breakpoint
                    // for the current design and $boxSize and $boxMargin
                    // Margin is auto for centering and added gap on list container
                    //@media $mediaMaxXs {
                    @media (max-width: 520px) {
                        width: auto;
                        display: block;
                        max-width: 340px;
                        margin: $grid-gap auto;
                    }

                    h3 {
                        font-size: 20px;
                        font-weight: bold;
                    }
                    
                    .StarsRating {
                        color: $brand-secondary;
                        display: block;
                    }
                    
                    p {
                        margin: 0px 0px 30px;
                    }
                    
                    .btn {
                        font-weight: bold;
                        
                        em {
                            font-weight: normal;
                            font-style: normal;
                        }
                    }
                    
                    // icons
                    > i {
                        color: White;
                        font-size: 4em;
                        display: inline-block;
                        border-radius: 12px;
                        background: $brand-primary;
                        text-align: center;
                        padding: 14px 20px;
                        margin: 30px auto 8px;
                    }
                }
                
                // Setting margin for small screens since the items margin is auto there
                //@media $mediaMaxXs {
                @media (max-width: 520px) {
                    margin: 0 $grid-gap;
                }
            }
        }
    }
}
