/* Grayscale colors */
$gray-darker = #222;
$gray-dark = #333;
$gray = #555;
$gray-light = #777;
$gray-lighter = #EEE;
$gray-colors = {
    darker: $gray-darker,
    dark: $gray-dark,
    gray: $gray,
    light: $gray-light,
    lighter: $gray-lighter
};

/* Semantic colors */
$fg-primary = #00989A;
$fg-success = #99C027;
$fg-info = #B5E1E2;
$fg-warning = #E95D0F;
$fg-danger = #FC0404;
$fg-colors = {
    primary: $fg-primary,
    success: $fg-success,
    info: $fg-info,
    warning: $fg-warning,
    danger: $fg-danger
};

/* Semantic colors used as background */
$bg-primary = #00989A;
$bg-success = #FFF;
$bg-info = #FFF;
$bg-warning = #FFF;
$bg-danger = #FFF;
$bg-colors = {
    primary: $bg-primary,
    success: $bg-success,
    info: $bg-info,
    warning: $bg-warning,
    danger: $bg-danger
};

/** Typo **/
$font-size-base = 14px;

/** Utilities **/
$caret-width-base = 4px;

/* Caret mixim
    TODO: move to a better place
*/
$caret($margin-left = 2px) {
  display: inline-block;
  width: 0;
  height: 0;
  margin-left: $margin-left;
  vertical-align: middle;
  border-top:   $caret-width-base solid;
  border-right: $caret-width-base solid transparent;
  border-left:  $caret-width-base solid transparent;
}
