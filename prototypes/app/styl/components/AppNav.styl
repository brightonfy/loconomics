/**
    AppNav Component (extends .navbar)
**/
.AppNav {
    
    position: relative;

    .navbar-brand {
      float: none;
      display: inline-block;

      text-indent: -99999px;
      background: url("../../../assets/images/logo-loconomics-header-mini.png") no-repeat center;
      hr-image("../../../assets/images/logo-loconomics-header-mini@2x.png", 100px, 39px);
      min-width: 100px;
      min-height: 39px;
    }
    
    .navbar-toggle {
      float: none;
      margin-right: 0;
    }
    
    .navbar-action {
      margin: 8px 0;
    }
}
