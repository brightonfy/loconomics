@{
    var UserID = 0 ;
    if (WebSecurity.IsAuthenticated) {
        Layout = "~/en_US/_SiteLayout.cshtml";
        UserID  = WebSecurity.CurrentUserId;
    }else{
        Response.Redirect("~/en_US/Account/Login?Redirect=~/en_US/EmailRequest?from=" + Request["from"] + "&threadID=" + Request["threadID"]);
    }
}
<script type="text/javascript">
$(document).ready(function () {
    //$("#UserID").hide()
});
</script>
   
<div id="container">
    <h1>
    <title>Request for Assistance</title>
</h1>
  <h2>Submit Email Request for Assistance</h2>
  <form method="post" action="ProcessRequest.cshtml">
    <div>
        <label id="userIDlabel" for="User ID: ">@UserID<label/>
         <input id="UserID" name="UserID" value=@UserID/>
    </div>

    <div>
        Details about your problem: <br />
        <textarea name="customerRequest" cols="45" rows="4"></textarea>
    </div>

    <div>
        <input type="submit" value="Submit" />
    </div>
  </form>
</div>