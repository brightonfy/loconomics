@{
    var withTitle = (bool)(PageData[0] ?? PageData["WithTitle"] ?? true);
    var withDesc = (bool)(PageData[1] ?? PageData["WithDescription"] ?? false);
    var asPage = (bool)(PageData[2] ?? Context.Request.RawUrl.Contains("$FAQ"));
}
    <article class="faqs widget @(asPage ? "aspage" : "")">
        @if (withTitle)
        {
        <h2 class="cushycms">FAQs</h2>
        }
        @if (withDesc)
        {
            <p class="description cushycms">
