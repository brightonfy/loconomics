@{
    var providerID = PageData[0];
    var positionID = PageData[1];
    var db = Database.Open("sqlloco");
    var query = @"SELECT r.Rating1, r.Rating2, r.Rating3, r.Rating4, r.PublicReview, r.PaymentID
                FROM UserReviews r
                WHERE r.ProviderID = @0 AND r.PositionID = @1";
    var reviews = db.Query(query,providerID,positionID);
    var grid = new WebGrid(reviews, ajaxUpdateContainerId: "reviews_grid");                    
}
@grid.GetHtml(columns: grid.Columns(
                                    grid.Column("PaymentID"),
                                    grid.Column("Rating1"),
                                    grid.Column("Rating2"),
                                    grid.Column("Rating3"),
                                    grid.Column("Rating4"),
                                    grid.Column("PublicReview")
                                    )
            )
