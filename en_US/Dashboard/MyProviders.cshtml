@{
    CommonHelpers.SecurePage();
    
    Layout = "_Layout.cshtml";
    Page.Title = "Make your life better!";
    
    var u = PageData["userow"] = DashboardFunctions.GetUserRow();
    
    if (!u.IsCustomer) {
        return;
    }
    
    PageData["menu-item"] = "myproviders";
}

		<ul class="tabs autofill-submenu-items">
			<li class="current"><a class="current" href="#myproviders-current">Current</a></li>
			<li><a href="#myproviders-past">Past</a></li>
        </ul>

		<div id="myproviders-current" class="tab-body fancy tabbed buttons current">
            <ul class="tabs">
                <li><a class="button profile fanciful current" href="#myproviders-current-list">List</a></li>
                <li><a class="button profile fanciful" href="#myproviders-current-preferences">Preferences</a></li>
                <li><a class="button profile fanciful" href="#myproviders-current-activity">Activity</a></li>
            </ul>
            
            <div id="myproviders-current-list" class="tab-body current">
