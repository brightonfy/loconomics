@{
    DashboardFunctions.SecurePage();
    
    Layout = "_Layout.cshtml";
    Page.Title = "Make your life better!";
    
    PageData["userow"] = DashboardFunctions.GetUserRow();
    PageData["menu-item"] = "myclients";
}

		<ul class="tabs autofill-submenu-items">
			<li class="current"><a class="current" href="#myclients-current">Current</a></li>
			<li><a href="#myclients-past">Past</a></li>
        </ul>

		<div id="myclients-current" class="tab-body fancy tabbed buttons current">
            <ul class="tabs">
                <li><a class="button profile fanciful current" href="#myclients-current-list">List</a></li>
                <li><a class="button profile fanciful" href="#myclients-current-preferences">Preferences</a></li>
                <li><a class="button profile fanciful" href="#myclients-current-activity">Activity</a></li>
            </ul>
            
            <div id="myclients-current-list" class="tab-body current">
                List <!-- TODO here must be the back-end content -->
            </div><!-- #myclients-current-list -->
            <div id="myclients-current-preferences" class="tab-body">
                Preferences <!-- TODO here must be the back-end content -->
            </div><!-- #myclients-current-preferences -->
            <div id="myclients-current-activity" class="tab-body">
                Activity <!-- TODO here must be the back-end content -->
            </div><!-- #myclients-current-activity -->
		</div><!-- #myclients-current -->
        
		<div id="myclients-past" class="tab-body fancy">
             <!-- TODO here must be the back-end content -->
            <table class="view">
                <caption>List of past clients</caption>
                <thead><tr><th>Client</th><th>Last activity</th><th class="actions">Actions</th></tr></thead>
                <tbody>
                    <tr><td>Client 1</td><td>@(DateTime.Today.AddYears(-1))</td>
                        <td class="actions">
                        <input class="button" type="button" value="Preferences"/>
                        <input class="button" type="button" value="Activity"/></td></tr>
                    <tr><td>Client 2</td><td>@(DateTime.Today.AddYears(-2))</td>
                        <td class="actions">
                        <input class="button" type="button" value="Preferences"/>
                        <input class="button" type="button" value="Activity"/></td></tr>
                </tbody>
            </table>
		</div><!-- #myclients-past -->