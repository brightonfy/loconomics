@{
    CommonHelpers.SecurePage();
    
    var u = DashboardFunctions.GetUserRow();
    PageData["menu-item"] = "account";
}

		<ul class="tabs autofill-submenu-items">
			<li class="current"><a href="#account-personal">Personal</a></li>
            @if (u.IsProvider){
			<li><a href="#account-payments">Payments</a></li>
            <li><a href="#account-taxes">Taxes</a></li>
            <li><a href="#account-terms">Terms &amp; Privacy</a></li>
            }
        </ul>

		<div id="account-personal" class="tab-body current fancy buttons">
            @RenderPage("$AccountPersonal.cshtml")
		</div><!-- #account-personal -->
        
    @if (u.IsProvider){
		<div id="account-payments" class="tab-body fancy tabbed buttons" data-help-point="$FAQS">
            <ul class="tabs">
                <li class="current"><a class="button profile fanciful" href="#account-payments-bankinfo">Bank Account</a></li>
                <li><a class="button profile fanciful" href="#account-payments-transactionhistory">Transaction History</a></li>
            </ul>
            
            <div id="account-payments-bankinfo" class="tab-body current" data-help-point="#payments-bankinfo">
                @RenderPage("$AccountPaymentsBankInfo.cshtml")
            </div><!-- #account-payments-bankinfo -->
            <div id="account-payments-transactionhistory" class="tab-body">
                Transaction History <!-- TODO here must be the back-end content -->
            </div><!-- #account-payments-transactionhistory -->
		</div><!-- #account-payments -->

		<div id="account-taxes" class="tab-body fancy buttons">
            @RenderPage("$AccountTaxes.cshtml")
		</div><!-- #account-taxes -->
        
        <div id="account-terms" class="tab-body fancy">
            @RenderPage("$AccountTerms.cshtml")
        </div><!-- #account-terms -->
