@{
    var userCulture = "";
    if(IsPost){
           userCulture = Request.Form["LangSelection"];
           HttpCookie myHttpCookie = new HttpCookie("Culture",userCulture);
           HttpRequest request = HttpContext.Current.Request;
           request.Cookies.Set(myHttpCookie);

           if(userCulture == "es-es"){
               Response.Redirect("~/en_US/Default.cshtml");
           }
    }
}





