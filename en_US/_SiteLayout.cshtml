@{
    var userCulture = "";
    if(IsPost){
           userCulture = Request.Form["LangSelection"];
           HttpCookie myHttpCookie = new HttpCookie("Culture",userCulture);
           HttpRequest request = HttpContext.Current.Request;
           request.Cookies.Set(myHttpCookie);

           // TODO: TOREVIEW
           if(userCulture == "es-es"){
               Response.Redirect(UrlUtil.AppPath + "en_US/");
           }
    }
}
@functions{
    bool IsCurrentUserAProvider(){
        var db = Database.Open("sqlloco");
        return ((int)db.QueryValue("EXEC IsUserAProvider @0", WebSecurity.CurrentUserId) == 1);
    }
}
