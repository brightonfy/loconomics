@using WebMatrix.Data;
@using WebMatrix.WebData;
@{
    LcHelpers.SecurePage();
    
    if (IsPost){
        using (var db = Database.Open("sqlloco")){
            db.Execute("UPDATE Users SET AccountStatusID = 1 WHERE UserID = @0", WebSecurity.CurrentUserId);
        }
    
        LcHelpers.ReturnJsonResult(0, "Your account has been reactivated! Please update your profile with any changes");
    }
}