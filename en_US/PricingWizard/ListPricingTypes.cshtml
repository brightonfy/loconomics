@*
    This page is called to populate a JSON object with the Pricing Types available in the system
*@
@{
    var db = Database.Open("sqlloco");
    var sql = @"SELECT p.PricingTypeID, p.Description
                FROM dbo.pricingtype p";
    var data = db.Query(sql);

    CommonHelpers.ReturnJsonResult(0, data);
}