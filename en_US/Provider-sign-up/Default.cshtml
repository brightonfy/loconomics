@{  
    Layout = "../_SiteLayout.cshtml";
    Page.Title = "Welcome to Loconomics";
    
    Scripts.Add(UrlUtil.AppPath + "Scripts/Provider-sign-up.js");
}
  <div id="container" class="clearfix sign-up-wizard editable">
    <div id="main" class="tabbed folders wizard">
		<h1 class="withsub">@Page.Title</h1>
        <p class="subh1">We’re glad you’re here</p>
        
		<ul class="tabs">
			<li class="current"><a class="current" href="#create-a-login">Create a Login</a></li>
			<li class="disabled"><a href="#your-work">Your Work</a></li>
            <li class="disabled"><a href="#next-steps">Next Steps</a></li>
        </ul>
        
		<div id="create-a-login" class="tab-body fancy current">
            @RenderPage("$Create-a-login.cshtml")
		</div><!-- #create-a-login -->

		<div id="your-work" class="tab-body fancy">
            @RenderPage("$Your-work.cshtml")
		</div><!-- #your-work -->

		<div id="next-steps" class="tab-body fancy">
            @RenderPage("_Next-steps.cshtml")
		</div><!-- #next-steps -->

    </div><!-- #main -->
    
  </div><!-- #container -->