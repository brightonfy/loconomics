/**
  WelcomePopup Sign-up styles.
**/
@import "nib"
@import "ColorsPalette"
@import "mediaQueries"

.ui-autocomplete
    z-index 9000 !important

/* 
    Containers setup 
*/

$welcomePopupMedia = "only screen and (max-width: 640px)"

#welcome-popup-container
    padding: 0;
    width: 400px;
    margin: 120px auto 60px;
    border: 1px solid #5a5b5b;
    border-radius: 10px;

    /* Adjusting welcome popup on mobile/tablet, following rules and sizes from #514 */
    @media $welcomePopupMedia
        width 100%
        margin 0
        border none
        border-radius 0
        box-shadow none
        background none !important
        
#welcome-popup-overlay
    display: none;
    
    /* fixed needs overflow and height:100% to get scrollbar */
    position: fixed;
    height: 100%;
    overflow: auto;

    top:0;
    left:0;
    right:0;
    z-index:999;
    
    @media $welcomePopupMedia
        background none !important


.RegisterPage {
    #welcome-popup-overlay {
        background: none !important;
        display: block;
        position: static;
        min-height: 0;
    }
}

/* Hidding other things when popup sign-up is required and we are in mobile */
@media $welcomePopupMedia
    body.strict-welcome-popup
        #container, #site-header, #site-footer
            display none

/*
    Content
*/

#welcomepopup
    
    .actions .main-action,
    .actions .next-action   
        width: 100%;
        font-weight: bold;
           
    .register
        padding: 20px 25px;
        text-align: center;
        border: 1px solid #cccccc;
        border-width: 1px 0;
        background-color: #f5f5f5;
        margin: 0;
        position: relative;
        
        @media $welcomePopupMedia
            padding 10px 0
            background none
            background-color transparent
            border none
        
        form
            margin: 0 1em;
            
    header
        padding: 20px 25px;
        text-align: center;
        
        @media $welcomePopupMedia
            padding 10px
           
        h1  
            line-height: 39px;
            font-size: 1.3em;
            color: #00989A;
            text-align: center;
        
            &.has-icon 
                padding-left: 110px
                background url("../img/theme/logo-loconomics-header-mini.png") no-repeat left center transparent /* white */
    
            @media $welcomePopupMedia
                font-size 1em
                /*
                text-indent -9999px
                */
                
        .presentation
            text-align: justify;
            font-size: 1em;
            padding: .5em 1em;
            color: Black;
            line-height: normal;
            
            @media $welcomePopupMedia
                margin-top: 10px
   
    footer
        padding: 20px 25px;
        text-align: center;
        
        @media $welcomePopupMedia
            padding 10px
    
        div.login
            @media $welcomePopupMedia
                margin 10px 0
        
