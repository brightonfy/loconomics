/**
  FileUploader.

  Styles for the component qq-fileuploader using the original class names, based on
  its source CSS file but adapted but wrapped inside the class FileUploader that includes
  extra components as the delete button and the photo editor.

  Main class: FileUploader
  Contains classes: qq-uploader, qq-upload-drop-area, qq-upload-button, qq-upload-list, *
**/
@import "Actions"
@import "ColorsPalette"

FullButton() {
    width: 100%;
    box-sizing: border-box;
    display: block;
    text-align: center;
}

.FileUploader {
    
    &.FileUploader--hideSuccess {
        .qq-upload-success {
            opacity: 0;
            height: 0;
            transition: opacity 1s, height .5s 1s;
            margin: 0 !important;
        }
    }
   
    .FileUploader-uploader {
        .qq-uploader {
            position: relative;
            width: 100%;
        }
        
        .qq-upload-button {
            Action()
            FullButton()
        }

        .qq-upload-button-hover {}
        .qq-upload-button-focus {}

        .qq-upload-drop-area {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            min-height: 70px;
            z-index: 2;
            background: #FF9797;
            text-align: center;
            span {
                display: block;
                position:absolute;
                top: 50%;
                width:100%;
                margin-top:-8px;
                font-size:16px;
            }
        }
        .qq-upload-drop-area-active {
            background: #FF7171;
        }

        .qq-upload-list {
            padding:0;
            list-style:disc;
            max-height: 120px;
            overflow: auto;
        
            li {
                margin:0;
                padding:0;
                line-height:15px;
                font-size:12px;

                &:first-child {
                    margin-top: 10px;
                }
                
                &:last-child {
                    margin-bottom: 10px;
                }
            }
        }
        .qq-upload-file, .qq-upload-spinner, .qq-upload-size, .qq-upload-cancel, .qq-upload-failed-text {
            margin-right: 7px;
        }

        .qq-upload-file {}
        .qq-upload-spinner {
            display: inline-block;
            background: url("../img/theme/loading-mini.gif");
            width: 15px;
            height: 15px;
            vertical-align: text-bottom;
        }
        .qq-upload-size, .qq-upload-cancel {
            font-size: 11px;
        }

        .qq-upload-failed-text {
            display:none;
        }
        .qq-upload-fail .qq-upload-failed-text {
            display:inline;
        }
    }
    
    .FileUploader-editor {
        .jcrop-holder {
            margin: 0 auto 1em;
        }
        
        > p {
            text-align: center;
            margin: 1em 0 0.5em;
        }
        
        .save-photo-action {
            Action($colorOrange)
            FullButton()
        }
    }
    
    .FileUploader-removal {
        
        margin-top: 1em;
        
        .remove-photo-action {
            Action($colorRed)
            FullButton()
        }
    }
}