/**
  Modifier 'large' for the Carousel Bootstrap component.
  Part of the StyleGuide
  Base: http://getbootstrap.com/examples/carousel/
**/
@import "nib"

/*:fixed?*/
$carouselHeight = 500px

.carousel.large {
  height: $carouselHeight;

  .carousel-caption {
    z-index: 10;
  }
  
  .item {
    height: $carouselHeight;
    /*:var*/
    background-color: #777;
  }
  
  .carousel-inner > .item > img {
      position: absolute;
      top: 0;
      left: 0;
      min-width: 100%;
      
      height: $carouselHeight;
    }
    
    /*:var*/    
    @media (min-width: 768px) {
        /* Bump up size of carousel content */
        .carousel-caption p {
            /*:fixed?*/
            margin-bottom: 20px;
            /*:var*/
            font-size: 21px;
            /*:var*/
            line-height: 1.4;
        }
    }    
}
