@import "nib"
@import "utils/ColorsPalette"
@import "utils/Actions"

.ProviderWelcome {
    $fullWidth = 960px;
    $sidebarWidth = 330px;
    
	#main {
	    float: none;
	    width: auto;
	    /* Removing the white-space between inline-block boxes */
	    letter-spacing: -.3em;

        > div {
            letter-spacing: 0;
            display: inline-block;
            vertical-align: top;
        }
    
        .ProviderWelcome-presentation {
            width: $fullWidth - $sidebarWidth;
            box-sizing: border-box;
            border-right: 2px solid $colorLtGray;
        
            .ProviderWelcome-presentation-slides {
                .ProviderWelcome-presentation-slide {
            
                    .ProviderWelcome-presentation-slide-header {
                        font-size: 2em;
                        color: $colorTeal;
                        line-height: normal;
                    }
            
                }
            }
        }
    
        .ProviderWelcome-signUp {
            width: $sidebarWidth;
        
            #welcomepopup {
                .register {
                    padding-top: 0;
                    background: none;
                    border: none;
                
                    .main-action {
                        Action--rightArrow($colorOrange);
                        background-color: $colorOrange !important;
                        width: 100%;
                        box-sizing: border-box;
                        padding: .4em .3em;
                        text-transform: lowercase;
                    
                        &:hover {
                            box-shadow: 0 0 5px 2px $colorOrange;
                            background-color: $colorOrange;
                        }
                    }
                
                    .profile-data {
                        margin: 0;
                    }
                }
            
                header,
                footer {
                    padding: 5px 25px;
                }
            
                footer .login {
                    display: none;
                }
            }
        }
    }
}