.DashboardYourWork .DashboardPhotos {
    fieldset{
        display: inline-block;
        vertical-align: top;
    }
    .no-photos,
    .no-primary-photo {
        display: none;
    }
    fieldset li{
        margin: 6px 0;
        padding: 0;
    }
    .positionphotos-edit {
        width: 500px;
    }
    .positionphotos-gallery {
        width: 160px;
    }
    .positionphotos-tools {
        display: block;
    }

    .positionphotos-edit {
        border-right: 4px solid #DADADA;
        margin-right: 8px !important;
        padding-right: 4px !important;
    }

    .positionphotos-edit-photo {
        overflow: hidden;
        text-align: center;
    }
    .positionphotos-edit-photo img{
        max-height: 332px;
        max-width: 442px;
    }
    .positionphotos-gallery ol{
        list-style: none;
        padding: 0;
        margin: 0;
        /* height: 100% works fine in Firefox, but not in Chrome (webkit) and IE, setting to static 349px */
        height: 420px;
        overflow: auto;
    }
    .positionphotos-gallery li {
        width: 134px;
        overflow: hidden;
    }
    .positionphotos-gallery li a{
        display: block;
        width: 128px;
        height: 96px;
        margin: 3px auto;
        overflow: hidden;
        text-align: center;
    }
    .positionphotos-gallery li a img{
        max-width: 128px;
        min-height: 96px;
    }
    .positionphotos-gallery li.selected a{
        outline: 3px solid #00989a;
    }
    .positionphotos-gallery li.selected a.edit{
        outline: none;
    }
    .positionphotos-gallery li a.edit{
        display: block;
        text-align: right;
        text-transform: lowercase;
        width: auto;
        height: auto;
    }
    
    /* Increased size for the sortable placeholder for
        better user experience. The height given
        is the same as the size images took with
        current styles */
    .positionphotos-gallery .ui-state-highlight {
        height: 125px;
    }
    
    .positionphotos-edit-caption label,
    .positionphotos-edit-primary label{
        padding: 5px 0;
        width: auto !important;
        margin-right: 15px;
    }
    .positionphotos-edit-caption input{
        width: 270px !important;
    }
    .positionphotos-edit-primary h6{
        font-size: 1em;
        color: #666666;
        margin: 0 15px 0 0;
        font-weight: normal;
        display: inline-block;
    }
    .positionphotos-edit-primary input {
        margin: 0 3px;
    }
    .positionphotos-edit-primary label{
        padding: 0;
    }
}
