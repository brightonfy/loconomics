/** Your work
**/
@import "../utils/BasicForm"
@import "../utils/Crudl--basicStyle"
@import "../utils/ItemBox"
@import "../utils/ActionBox"
@import "../utils/ColorsPalette"

.DashboardYourWork {
    
    .DashboardPosition-quickToolsBar {

        position: absolute;
        top: 20px;
        right: 20px;
        text-transform: lowercase;
        cursor: pointer;
        text-align: right;

        > .DashboardPosition-quickToolsBar-group {
            display: inline-block;
            vertical-align: middle;
            margin-left: .6em;
        }

        .DashboardPosition-quickToolsBar-link {
            display: block;
            text-decoration: underline;
            color: #AE637B;
            font-size: 0.92em;
            line-height: 1.2em;
        }
        
        .delete-position > .DashboardPosition-quickToolsBar-link,
        .delete-position > .DashboardPosition-quickToolsBar-link:link,
        .delete-position > .DashboardPosition-quickToolsBar-link:visited {
            color: #EB6E42;
        }
    }
    
    .DashboardServices {
        .DashboardServices-attributes {
            ul {
                display: block;

                li {
                    overflow: hidden;
                    margin: 0 0 2px;
                    padding: 0;
                    width: 33%;
                    float: left;
                }
            }
            
            fieldset {
                &.is-required.is-error legend {
                    box-shadow: 0 0 5px 1px $colorRed;
                    padding: 0 10px;
                }
            }
            
            .DashboardServices-sidebar {
                fieldset {
                    overflow: hidden;
                    width: 33%;
                    float: left;
                    
                    li {
                        float: none !important;
                        width: auto !important;
                    }
                }
            }
            
            .DashboardServices-attributes-languages {
                clear: both;

                ul {
                    li {
                        width: 48%;
                        white-space: nowrap;
                        clear: none;
                        
                        label, select {
                            display: inline-block;
                            width: 46%;
                        }
                        
                        label {
                            margin-right: 1%;
                            overflow: hidden;
                            line-height: normal;
                            vertical-align: middle;
                        }
                    }
                }
            }
        }
    }
    
    .DashboardCancellationPolicy {
        .DashboardCancellationPolicy-info {
            text-decoration: underline;
        }
    }
    
    .DashboardLicenses {
        .DashboardLicense-licenseDetails {
            ul {
                /* To compensate the dual 6px margin of this last li element
                    and the DashboardLicense-request first li element */
                margin-bottom: -6px;

                li {
                    margin: 6px 0px;
                    padding: 0px 10px;
                }
            }
        }
        
        .DashboardLicense-request {
            li label {
                font-weight: bold;
                min-width: 230px;
                width: auto;
                display: inline-block;
            }
        }
    }
    
    .DashboardReviews {
        li {
            padding: 0;
        
            label {
                display: block;
                padding: 0px 4px;
            }

            textarea{
                height: 7em;
            }
        }
    }
    
    .DashboardAddPosition {
        
        .DashboardAddPosition-positionsList,
        .DashboardAddPosition-selectPosition {
            float: left;
            width: 50%;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
        
        .DashboardAddPosition-selectPosition-description {
            height: 180px;
            margin-top: 1em;
        }

        .DashboardAddPosition-positionsList {
            padding-left: 30px;
            
            li {
                list-style: disc inside;
                margin: 3px 0;
                padding: 0;
                
                > a,
                > a:visited {
                    color: #00989b;
                    margin-left: 20px;
                    text-transform: lowercase;
                }
            }
        }

        h4 {
            margin-bottom: 15px !important;
            font-weight: bold;
            color: #747474;
            margin: 6px 0px 0px;
            font-size: 1.1em;
        }
    }
}

/* DashboardPricing on external sheet */
@import "pricing";

/* DashboardLocations on external sheet */
@import "locations";

/* DashboardPhotos on external sheet */
@import "photos";