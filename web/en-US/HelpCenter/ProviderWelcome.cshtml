@{
    Layout = LcUrl.RenderLangPath + "_SiteLayout.cshtml";
    Page.Title = "Make your life better!";
    LcAssets.AddStyle(LcUrl.AppPath + "Styles/HelpCenter.css");
    PageData["ShowWelcomePopup"] = false;
    PageData["ShowWelcomeHeader"] = true;
}
<div id="container" class="provider-welcome-page ProviderWelcome">
    <div id="main">
        <div class="ProviderWelcome-presentation">
            <h1 class="ProviderWelcome-presentation-header">
                A community marketplace for the self employed:
            </h1>

            <ul class="ProviderWelcome-presentation-slides">
                <li class="ProviderWelcome-presentation-slides-first">
                </li>
                <li class="ProviderWelcome-presentation-slides-second">
                </li>
                <li class="ProviderWelcome-presentation-slides-third">
                </li>
                <li class="ProviderWelcome-presentation-slides-fourth">
                </li>
            </ul>

            <div class="ProviderWelcome-presentation-actions">
                <div class="ProviderWelcome-presentation-actions-start">
                    <button type="button" class="action start-action next-action">learn more</button>
                </div>
                <ul class="ProviderWelcome-presentation-actions-slides">
                    <li>First slide</li>
                    <li>Second slide</li>
                    <li>Third slide</li>
                    <li>Fourth slide</li>
                </ul>
            </div>
        </div>

        <div class="ProviderWelcome-signUp">
            @RenderPage(LcUrl.RenderLangPath + "Account/$WelcomePopup.cshtml", new
            {
                PreselectedType = "provider"
            })            
        </div>
    </div>
</div>