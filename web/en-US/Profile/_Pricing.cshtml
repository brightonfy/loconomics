    // Current position data record:
    var pos = PageData["position"];

    // TODO: Get Customer Type Id   
    var clienttypeid = PageData["ClientTypeID"] = 1;

    var pricingTypes = LcData.GetPositionPricingTypes(pos.PositionID, clienttypeid);
}
<p></p>
<div class="view-panel">
    @foreach(var pricingType in pricingTypes) {
        @RenderPage(LcUrl.RenderLangPath + "PricingWizard/$PricingTypePackagesList.cshtml", new { Editable = false, PricingTypeID = pricingType.PricingTypeID, ProviderUserID = pos.UserID, PositionID = pos.PositionID })
    }
    @RenderPage(LcUrl.RenderLangPath + "PricingWizard/$ViewPricingOptions.cshtml", new { Title = "Additional options available during checkout:", PricingTypeID = 3, ClientTypeID = clienttypeid } )
</div>
