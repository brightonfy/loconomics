@using WebMatrix.Data;
@{
    LcHelpers.SecurePage();
    
    var u = LcData.UserInfo.GetUserRow();
    var brID = Request["BookingRequestID"].AsInt();
    
    var sqlCheckBookingRequest = @"
        SELECT  TOP 1 R.BookingRequestID
        FROM    BookingRequest As R
        WHERE   R.ProviderUserID = @0
                 AND
                R.BookingRequestID = @1
                -- Not Denied Booking Request
                 AND
                R.BookingRequestStatusID <> 7
    ";
    
    using (var db = Database.Open("sqlloco")) {
        var checkID = db.QueryValue(sqlCheckBookingRequest, u.UserID, brID);
        if (checkID != null && (int)checkID == brID) {

            var result = LcData.Booking.InvalidateBookingRequest(brID, 5); // 5:denied/declined

            if (result.Error == 0) {
                // Send message
                LcMessaging.SendBookingRequestDenegation(brID, true);
                
                if (Request.IsAjaxRequest()){
                    // An ajax redirect is performed to return the updated BookingRequestDetails html to the user
                    LcHelpers.ReturnJsonResult(3, LcUrl.LangPath + String.Format(
                        "Booking/$BookingRequestDetails/?BookingRequestID={0}", brID ));
                } else {
                    Response.Redirect(LcUrl.LangPath + String.Format(
                        "Dashboard/Bookings/$!BookingRequest-{0}", brID));
                }
            } else {
                if (Request.IsAjaxRequest()){
                    // Return JSON result:
                    // We need negative numbers to indicate an error (is our convention for json 'Code')
                    LcHelpers.ReturnJsonError(0 - result.Error, result.ErrorMessage);
                } else {
                    throw new HttpException(500, "We're having problems completing your request.  Please e-mail support@loconomics.com and reference: " + result.ErrorMessage);
                }
            }
        } else {
            if (Request.IsAjaxRequest()){
                /* What? 
                 * - BookingRequestID and UserID (as ProviderUserID) don't match?
                 * - BookingRequest is already confirmed?
                 */
                LcHelpers.ReturnJsonError(-1, "We're having problems completing your request.  Please e-mail support@loconomics.com.");
            } else {
                throw new HttpException(500, "We're having problems completing your request.  Please e-mail support@loconomics.com.");
            }
        }
    }
}