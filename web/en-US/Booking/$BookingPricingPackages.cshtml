@{
    var booking = PageData["BookingData"];
    var forEmail = PageData["ForEmail"] ?? false;
}
<ul @if(forEmail) { @LcEmailTemplateHelper.StyleUlOl(false, "border:2px solid #9a9a9a;background: #f5f5f5;padding:14px;"); }>
@foreach (var pak in LcData.Booking.GetPricingEstimatePackages(booking.PricingEstimateID))
{
    @RenderPage(LcUrl.RenderLangPath + "PricingWizard/$PackageView.cshtml", new {
        Package = pak,
        EditableView = false,
        PricingEstimateID = booking.PricingEstimateID,
        PricingEstimateRevision = booking.PricingEstimateRevision,
        ContainerClasses = "provider-package",
        ContainerTag = "li",
        ShowPrices = false,
        ForEmail = forEmail
    });
}
</ul>