@*
    Wrapper page over the different forms available to edit different types of
    verifications.

    Verifications from userverification table itself are not editable right now.

    NOTE: Only background-check can be 'requested' (added, not edited) from here right now.
*@
@{
    LcHelpers.SecurePage();

    // Redirecting per type    
    var type = Request["type"];
    switch (type) {
        case "background-check":
            @RenderPage("$BackgroundCheckEdit.cshtml")
            break;
    }
}