@{
    // Set the layout page and page title
    Layout = LcUrl.RenderLangPath + "_SiteLayout.cshtml";
    Page.Title = "Welcome to Loconomics";
    PageData["ShowWelcomePopup"] = false;
}

@if (!WebSecurity.IsAuthenticated) {
    
  <div id="container" class="clearfix">
    <hgroup class="title">
        <h1>Welcome to Loconomics!</h1>
    </hgroup>
    <p>
       An email with instructions on how to activate your account is on its way to you.
    </p>
  </div>
}else {

 <div id="container" class="clearfix">
   <hgroup class="title">
        <h1>Welcome to Loconomics!</h1>
   </hgroup>
   <p>
        It looks like you've already confirmed your account and are good to go.
    </p>
   </div>
}
