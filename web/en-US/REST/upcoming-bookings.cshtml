@*
    Getting User Upcoming Bookings Information:
    - Next booking
    - Stats about upcoming ones
*@
@functions{
    public class RestUpcommingBookings : RestWebPage
    {
        public override dynamic Get()
        {
 	         return LcData.Booking.GetUpcomingBookingsInfo(WebSecurity.CurrentUserId);
        }
    }
}
@{
    Response.RestRequiresUser(LcData.UserInfo.UserType.User);
    new RestUpcommingBookings().JsonResponse(this);
}
