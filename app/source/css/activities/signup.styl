[data-activity=signup] {
    // Most styles are defined in the Signup component.
    // Here only specific styles of the activity, since the
    // component shares html on several activities, like client booking
    
    .Signup-formcontainer {
        padding-bottom: 40px;

        @media $mediaMinSm {
            padding: 15px 50px;
        }
        @media $mediaMinMd {
            padding: 15px 65px;
        }
    }
    .Signup-login {
        text-align: center;
        padding: 10px 20px;
        margin: 0;
        > * {
    	    vertical-align: middle;
        }
    }
}
