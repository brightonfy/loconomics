/**
    About activity styles.
**/
[data-activity=about]

    // Ensure contents don't create horizontal scroll
    .container
        background $gray-background
        overflow: hidden;
        // Multiline for large words, like links. Seems only needed for Webkit;
        // with and without it, Firefox do it similar and slightly better by default
        word-wrap: break-word;
        padding: 2.8571em;

        .nav
        &.navbar-nav
            margin-top: 50px;
            a
              text-align: right;
        
        .team-cards
          width 100%
          text-align center
          padding-left 0
          position relative
          display flex
          flex-wrap wrap
          justify-content center

          .team-member
            list-style none
            box-shadow 0 1.5px 0 0 rgba(0,0,0,0.1)
            background-color white;
            width 90%
            height auto
            margin 0.7143em
            height auto

            @media $mediaMinSm {
              width 280px;
            }

            p
              opacity 0.5
              padding 0 1.7857em
              text-align: justify;

            .title
              font-style italic
              display inline-block
              padding-bottom 1.7857em
              border-bottom 0.2143rem solid rgba(100,100,100,0.5)
              margin-bottom: 1.7857em

            .member-image
              width 200px
              border-radius: 50%;
              height 200px
              margin-top 2.1429em
              background no-repeat center / cover;
              display inline-block
              padding 0em

      .special-thanks-partners
        position: relative;

      a.special-thanks-logos
        // Fixes clickable and focusable area (accessibility)
        display: block;

        > img {
          margin-top: 1.0714em;
          margin-bottom: 1.0714em;
          margin-right: auto;
          margin-left: auto;
          height: 160px;
        }

        @media $mediaMinSm {
          display: inline-block;
          top: 0em;
          right: 0em;
          > img {
            margin-right: 0em;
            margin-left: 0.3571em;
          }
        }

        &.special-thanks-logos-right
          > img {
            border: solid 1.4286rem white;
            height: 350px;
          }

          @media $mediaMinSm {
            position: absolute;
            top: 0em;
            right: 0em;
            > img {
              margin-right: 0.3571em;
              margin-left: 1.0714em;
            }
          }
