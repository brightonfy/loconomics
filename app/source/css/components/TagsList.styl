/**
    TagsList component
**/
.TagsList {
    display block
    margin-top 4px
    padding 0

    .TagsList-item {

        display: block;
        background: White;
        
        padding 0
        margin-bottom 6px
        
        vertical-align: middle;

        // Name
        > span {
            // like the .btn
            line-height: 34px;
            display: inline-block;
            padding-left: 1em;
        }

        // Removal button, on the right
        > .btn {
            float right
            color Black
            // Icon 
            > i {
                font-size: 18px;
                vertical-align: top;
            }
        }

        addTagFor($colorName, $color, $textColor = White) { 
            &.TagsList-item--{$colorName} {
                background: $color;
                color: $textColor;

                > .btn,
                > .btn > i {
                    color: $textColor;
                }
            }
        }

        for $color in $brand-colors {
            addTagFor($color, $brand-colors[$color]);
        }
    }
    
    $mediaMinSm = 'screen and (min-width: ' + screen-sm + ')'
    @media $mediaMinSm {
        clearfix()
        
        .TagsList-item {
            display: inline-block;
            margin-right: 10px;
            
            width auto
            float left
            
            > .btn {
                float none
            }
        }
    }
    
    &.TagsList--decorated {
        .TagsList-item {
            border-radius 4px
            box-shadow: 0px 0px 2px -1px black;
        }
    }
}