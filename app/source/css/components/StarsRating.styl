/**
    StarsRating component
**/
.StarsRating {
    display: inline-block;
    
    .StarsRating-icons {
        white-space: nowrap;
        display: inline-block;
        
        i {
            font-size: 1.5714rem;
            line-height:  1.7143rem;
            vertical-align: baseline;
            color: #ffb400;
        }
    }
    .StarsRating-total {
        vertical-align: bottom;
        line-height: 1.5714rem;
        font-size: 1.0714rem;
        color: $gray-dark;
    }
    
    &.StarsRating--sm {
        .StarsRating-icons {
            i {
                font-size: 1.2143rem;
                line-height: 1.2143rem;
            }
        }
        .StarsRating-total {
            font-size: 1.0000rem;
            line-height: 1.0000rem;
            font-weight: bold;
            vertical-align: baseline;
        }
    }
    
    &.StarsRating--xs {
        .StarsRating-icons {
            i {
                font-size: 1.0000rem;
                line-height: 1.0000rem;
            }
        }
        .StarsRating-total {
            font-size: 0.8571rem;
            line-height: 0.8571rem;
            font-weight: bold;
            vertical-align: baseline;
        }
    }
}
// custom element
app-stars-rating {
    display: inline-block;
}
