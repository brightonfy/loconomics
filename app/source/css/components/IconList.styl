/**
    IconList component for display of owner plans
**/

.IconList {
    list-style: none;
    background-color: white;
    padding: 15px;
    box-shadow: 0 1.5px 0 0 rgba(0,0,0,0.1);
    .IconList-intro {
        padding-top: 10px;
        padding-bottom: 15px;
        font-size: 16px;
        font-weight: bold;        
    }
    h2 {
        margin-top: 0px;
    }
    li {
        height: 50px;
        display: table;
        i {
            display: table-cell;
            width 40px;
            color: $brand-secondary;    
            font-size: 24px;
            text-align: center;
            vertical-align: middle;
        }
        p {
            display: table-cell;
            vertical-align: middle;
        }        
    }
    
}
.IconList-headingCard {
    background-color: $brand-primary;
    text-align: center;
    color: white;
    padding: 10px;
    margin-top: 5px;
}