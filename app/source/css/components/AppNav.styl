  padding-bottom: 1.4286em;
  text-align: left;  
  margin-right: 1.0714em;
  padding-left: 0em;
  .App-menus-group-header {
    font-size: 1.2143rem;
    margin-top: 1.4286em;
    color: $gray-light;
    text-align: left;
    border-bottom: 0.0714rem solid $gray-light;     
  }
  .navbar-nav {
    margin: 0;
  }
  .nav {
      a {               
        padding: 0.7143em 1.4286em 0.7143em 1.7857em;
        text-align: left; 
        color: $gray-dark;
        font-size: 1.2857rem;

        &:hover,
        &:focus {
          color: $brand-secondary-dark !important;
          font-weight: 500;
          padding-left: 1.5714em;
          background-color: transparent;   
          > i {
            color: $brand-secondary-dark !important;
            font-weight: 500;
            background-color: transparent;   
          }
        }   
      }

      i {
        margin-left: 0.3571em;  
        font-size: 1.2857rem;
      }
  }
}

.SubSectionNavBar {
    position: relative;
    ul {
      background: $gray-background;
      display: block;
      width: 100% !important;
      list-style: none;
      margin-top: 1.4286em;
      margin-bottom: 0.7143em;
      line-height: 1.1;
      padding-left: 0.3571em;

      li {
        font-size: 1.2857rem;
        color: $gray;
        text-decoration: none; 
        display: inline;
        a {
          text-decoration: none;
          color: $gray;
          &:hover,
          &:focus {
            text-decoration: none;
            color: $brand-secondary-dark;
          }
        }
      }
     }
    > button {
        position: absolute; 
        display: inline-block;
        top: 1.0714rem;
        right: 1.7857rem;
    }
}



