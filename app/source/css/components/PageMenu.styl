/**
    PageMenu component for secondary navigation
**/

.PageMenu
    display block
    position relative
    width 100%
    padding 0px
    text-align center
    line-height 19px !important
    background-color $brand-primary 
    a
        color #FFF
        text-decoration none
    ul
        display block
        width 100% !important
        margin 0 auto !important
        list-style none

        li
            display inline
            margin 0px !important

            a
              color #FFF
              display inline-block
              padding 17px 15px
              margin 0px -3px 0px -3px
              font-size 15px

              &:hover
                border-bottom 4px solid
                padding-bottom 13px !important
              &.active
                  a
                    border-bottom 4px solid
                    padding-bottom 13px !important