.SearchResultsPreview{ 
    height: auto;
    z-index: 0 !important;
    padding: 1em;
    background: $gray-background;
    border: solid 1px rgba(0,0,0, .15);
    .Group {
        display: flex;
        .Group-title {
            color: $gray-light;
            font-weight: bold;
        } 
    }
    ul {
        list-style-type: none;
    }
    .Result {
        flex-wrap: wrap;
        .Result-name {
            color: $gray-darker;
            font-weight: bold;
        }    
        .Result-description {
            color: $gray-dark;
        }
    }   
}

.SearchResultsJobTitle { 
    height: auto;
    background: $gray-background;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    ul {
        list-style-type: none;
    }
    .Result {
        background: #fff;
        border: solid 1px rgba(0,0,0, .15);
        box-shadow: 0 1.5px 0 0 rgba(0,0,0,0.1);
        margin: 1em;
        padding: 10px;
        flex-basis: 30vh;  
        align-self: center;
        height: 30vh;
        .Result-name {
            color: $gray-darker;
            font-weight: bold;
        }    
        .Result-description {
            color: $gray-dark;
        }
    }   
}