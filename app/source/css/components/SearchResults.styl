    .SearchResultsBackground-text {
      width: 80%;
      height: auto;
      overflow: auto;
      margin: auto;
      position: absolute;
      top: 0; 
      left: 0; 
      bottom: 0; 
      right: 0;

      h1 {
        color: White;
        font-size: 30px;
        font-weight: bold;
        text-align: center;

        @media $mediaMinSm {
          font-size: 44px;
        }
      }

      h2 {
        display: none;
        font-size: 20px;
        color: White;
        text-align: center;   

        @media $mediaMinSm {
          display: inherit;
        }
      }

      p {
        font-size: 18px;
        color: White;
        text-align: center;
