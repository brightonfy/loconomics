/**
    Search Results component
    
        background linear-gradient(rgba(255, 103, 101, .8), transparent 90%), 
               $brand-secondary  url('../images/self-header.jpg') no-repeat center / cover
**/
@import '../components/HomeNavBar.styl';

.SearchResultsPreview 
    background-color white
    display block
    margin-top 4px
    padding 0
    position absolute
    left 0
    right 0
    z-index 9999

    li 
      list-style none
        
      a 
        text-decoration none
         
      h3 
        padding-top 15px
        font-size 18px
        text-align center
      
      ul 
        width 100%
        padding 0
        
        .Result 
          border-bottom 1px solid $gray-light
          display block
          padding 15px 
          height auto
          
          .Result-info
            width 80%
            float left
            padding-left 15px          
          
            .Result-name 
              color $gray-dark
              font-size 16px

            .Result-count 
              font-size 16px
              color $gray

            .Result-description 
              display block
              font-size 12px
              color $gray
              line-height 24px
              height 24px
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
            
          .btn-inline
            width 15%
            float right
            margin-right 15px
            margin-top 5px
          
          .Result hover 
            background-color $gray-background
    
.SearchResults
  background-color $gray-background

  h3
    margin-top 10px
    margin-bottom 5px
    text-align center
    
  h5
    color $gray-light
    margin-top 0
    margin-bottom 5px
    text-align center
    
  p
    text-align left
    margin-left 15px
    margin-right 15px
  
  #categories-home
    position relative

  #job-titles-results
    position relative
    
  ul
    position relative
    z-index 999
    top -40px
    margin-bottom -25px
    display flex
    margin 0
    padding 0
    flex-wrap wrap
    justify-content center

    @media $mediaMinSm {
      top -100px;
    }
    
  li
    list-style none
    background-color rgba(255,255,255,1)
    box-shadow 0 1.5px 0 0 rgba(0,0,0,0.1)
    width 290px
    margin 15px
    padding-top 20px
    padding-bottom 20px
    
    a
      text-decoration none

  .SearchResultsBackground {
