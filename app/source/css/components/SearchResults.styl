/**
    Search Results component
**/
@import '../components/HomeNavBar.styl';
@import '../terms.styl';
@import '../home.styl';


.SearchResultsPreview 
    background-color rgba(247, 247, 247, 1)
    display block
    margin-top 4px
    padding 0

    li 
      list-style none
        
      a 
        text-decoration none
        display block
        padding 15px
      
        
      div 
        padding-top 15px
        font-size 18px
        text-align center
      
      ul 
        width 100%
        padding 0
        
        li hover 
          background-color rgba(255,255,255,1)
        
        
        li 
          border-bottom 1px solid rgba(204, 204, 204, 1)
          
          .Result-name 
            color rgba(51,51,51,1)
            font-size 16px
          
          
          .Result-count 
            font-size 16px
            color rgba(51,51,51,0.5)
          
          
          .Result-description 
            display block
            font-size 12px
            color rgba(51,51,51,0.5)
            line-height 24px
            height 24px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
    
.SearchResults
  background-color $gray-background
  
  h3
    margin-top 10px
    margin-bottom 5px
    text-align center
    
  h5
    color $gray-light
    margin-top 0
    margin-bottom 5px
    text-align center
    
  p
    text-align left
    margin-left 15px
    margin-right 15px
    
  ul
    display flex
    margin 0
    padding 0
    flex-wrap wrap
    justify-content center
    
  li
    list-style none
    background-color rgba(255,255,255,1)
    box-shadow 0 1.5px 0 0 rgba(0,0,0,0.1)
    width 290px
    margin 15px
    padding-top 20px
    padding-bottom 20px
    
    a
      text-decoration none
     
.ServiceProfessionalResult-summary
  width 69%
  float left
  text-align center
  color $gray-dark

  h3
    margin-top 0
    margin-bottom 0

  h5
    margin-top 0
    margin-bottom 0

.ServiceProfessionalResult-verificationsRating
  font-size 18px

.ServiceProfessionalResult-description
  text-align center
  padding-top 5px
  clear both 

  h5
    margin-top 8px
    display block

  .FromPrice
    color $gray-dark
    font-size 16px
    font-weight bold

.ServiceProfessionalResult-actions
  text-align center
  padding-top 5px
  clear both 

  a
    margin-top 8px
    display block
    color $brand-secondary

  .btn
    width 80%
    margin auto
    color white
        
.CategoryResult-summary
  text-align center
  color $gray-dark

  h3
    margin-top 0
    margin-bottom 0

  h5
    margin-top 0
    margin-bottom 0

.CategoryResult-description
  padding-top 5px
  padding-left 15px
  padding-right 15px
  clear both 

  h5  
    text-align justify
    margin-top 8px
    display block

  .FromPrice
    color $gray-dark
    font-size 16px
    font-weight bold

.CategoryBackground
    padding-top: $HomeNavBar-Height + 32px;
    background: rgb(79, 184, 185) url('../images/home-header.jpg') no-repeat top center / cover;