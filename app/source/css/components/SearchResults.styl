/**
    Search Results component
**/

.SearchResultsPreview 
    background-color rgba(247, 247, 247, 1)
    display block
    margin-top 4px
    padding 0

    li 
      list-style none
        
      a 
        text-decoration none
        display block
        padding 15px
      
        
      div 
        padding-top 15px
        font-size 18px
        text-align center
      
      ul 
        width 100%
        padding 0
        
        li hover 
          background-color rgba(255,255,255,1)
        
        
        li 
          border-bottom 1px solid rgba(204, 204, 204, 1)
          
          .Result-name 
            color rgba(51,51,51,1)
            font-size 16px
          
          
          .Result-count 
            font-size 16px
            color rgba(51,51,51,0.5)
          
          
          .Result-description 
            display block
            font-size 12px
            color rgba(51,51,51,0.5)
            line-height 24px
            height 24px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
    
.Search-results 
  background-color $gray-background
  
  h3
    margin-top 10px
    margin-bottom 5px
    text-align center
    
  h5
    color $gray-light
    margin-top 0
    margin-bottom 5px
    text-align center
    
  p
    text-align left
    margin-left 15px
    margin-right 15px
  

.Result-list
  display flex
  margin 0
  padding 0
  flex-wrap wrap
  justify-content center

  li
    list-style none
    background-color rgba(255,255,255,1)
    border-bottom 3px solid $gray-lighter
    width 290px
    margin 15px
    padding-top 20px
    padding-bottom 20px
     
    .Result-summary
      width 69%
      float left
      text-align center
      color $gray-dark
      h3
        margin-top 0
        margin-bottom 0

      h5
        margin-top 0
        margin-bottom 0

    .VerificationsRating
      font-size 18px
        
    div.clear
      clear both
    
    .Result-actions
      text-align center
      padding-top 5px
      clear both 
      
      a
        margin-top 8px
        display block
        color $brand-secondary
        
      .btn
        width 80%
        margin auto
        color white
        
      h5
        margin-top 8px
        display block
        
      .FromPrice
        color $gray-dark
        font-size 16px
        font-weight bold


