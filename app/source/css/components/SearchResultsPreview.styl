/**
    Search Results Preview component.
    Created to be uses as the list of results inside an autocomplete dropdown.
 */
 // TODO Better naming
.SearchResultsPreview {
    background-color: white;
    display: block;

    ul {
        padding: 0;
        margin-bottom: 0;
    }

    .SearchResultsPreview-h {
        padding-top: 5px;
        font-size: 18px;
        text-align: center;
        margin: 10px 0;
        color: $gray-dark;
    }

    a {
        text-decoration: none;
        // Make all box area clickable and focusable
        display: block;
    }

    li {
        list-style: none;

        ul {
            width: 100%;
            padding: 0;
        }
    }

}
