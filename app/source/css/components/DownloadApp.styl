.DownloadApp {
    h2 {
        margin-top: 0px;
        margin-bottom: 15px;
        text-align: center;
    }
    ul {
      text-align: center;
      margin: 0 auto;
      padding-bottom: 10px;
      -webkit-padding-start: 0px;

      li {
        margin: auto;
        padding: 12px;
        vertical-align: middle;
      }
    }

    .btn-appleStore {
        margin: 20px 8px;
        display: inline-block;
        width: 187px;
        height: 61px;
        background-repeat: no-repeat;
        background-size: 187px 61px;
        background-image: 
          linear-gradient(transparent, transparent),
          url('../images/Download_on_the_App_Store_Badge_US-UK_135x40.svg');
    }

    .btn-googlePlay {
        margin: 20px 8px;
        display: inline-block;
        width: 187px;
        height: 61px;
        background-repeat: no-repeat;
        background-size: 187px 61px;
        background-image: url('../images/en_badge_web_generic.png');
    }
}
