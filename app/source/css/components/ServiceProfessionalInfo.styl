/**
    ServiceProfessionalInfo
    
    It presents a box/tile with summary information about a serviceProfessional.
    It comes in different sizes
    
    TODO Finish per design, options
**/
.ServiceProfessionalInfo {
    text-align: center;
    margin: 0px auto;
    padding-left: 76px;
    position: relative;
    max-width: 320px;
    padding-bottom: 12px;
    padding-top: 12px;
    padding-right: 10px;

    .Avatar {
        position: absolute;
        left: 10px;
        top: floor((96px - 60px) / 2);
    }
    
    .ServiceProfessionalInfo-name {
        font-size: 18px;
        font-weight: bold;
        margin: 0;
        padding: 5px 19px;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }
    
    .ServiceProfessionalInfo-jobTitle {
        color: $gray-light;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }
    
    .serviceProfessionalInfo-businessName {
        color: $gray-light;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }
    
    .ServiceProfessionalInfo-meta {
        display: block;
        
        // All icons same size
        i {
            font-size: 22px;
        }
        
        .VerificationsRating {
            color: $gray;
            
            vertical-align: bottom;
            line-height: 22px;
            font-size: 15px;
            
            margin: 0 5px;
        }
        
        .BackgroundCheckRating {
            color: $brand-success;
        }
        
        .ServiceProfessionalInfo-favorite {
            position: absolute;
            top: 4px;
            right: 15px;
            
            i {
                color: $brand-secondary;
            }
        }
    }
}
