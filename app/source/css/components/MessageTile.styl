/**
    MessageTile
**/

@import 'Tile.styl'

.MessageTile {
    
    Tile();
    
    padding: 1.1429em $Tile-hgap;
    
    .Tile-title {
        font-size: 1.1em;
        font-weight: bold;
        display: inline;
    }
    
    .Tile-subtitle {
        color: $gray-light;
        float: right;
    }
    
    .Tile-content {
        margin: .6em 0 0 0;
    }
    
    strong {
        font-weight: bold;
    }
}
