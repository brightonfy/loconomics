/**
    PricingSummary component
**/
.PricingSummary {
    
    font-size: 1.1429rem;
    
    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0em;
        margin: 0 auto;
        
        td, th {
            padding: 0.2857em;
            line-height: 1.42857;
            vertical-align: top;
        }
        
        tfoot {
            border-top: 0.0714rem solid $gray-lighter;
            
            .PricingSummary-fees {
                padding-top: 0;
                font-size: 1.0000rem;
            }
        }
        
        .PricingSummary-price {
            text-align: right;
        }
    }
    
    .PricingSummary-time {
        
    }
}
