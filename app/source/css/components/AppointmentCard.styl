/**
    AppointmentCard Component.
    Visualization of a Calendar Appointment/Booking in a Card.
**/

@import 'Card.styl';

.AppointmentCard {

    .Card-title {
        /*h3 {
            font-size: 1.1em;
            font-weight: bold;
        }*/
        
        > .LinkTile {
            .Tile-icon {
                transition: opacity 400ms;
                opacity: 1;
                margin-right: 0.8571em;
                > * {
                    font-size: 1.0000rem !important;
                }
            }
        }
        
        transition: background 400ms $cubic-easing;

        addColor($colorName, $color) {
            &.Card-title--{$colorName} {
                background: $color;

                * {
                    color: White !important;
                }
            }
        }
        for $color in $brand-colors {
            addColor($color, $brand-colors[$color])
        }
    }
    
    &.in-edit,
    &.is-readonly {
        .Card-title > .LinkTile {
            .Tile-icon {
                opacity: 0;
            }
        }
    }
    
    .TilesList {
        > li > .InfoTile,
        > li > .ItemTile {
            // Reduce hgap so keeps the same gap with the window edges,
            // compensate the card padding
            padding-right: 0.4286em;
            padding-left: 0.4286em;            
        }
    }
    
    .AppointmentCard-actions {
        margin: 1.0000em 2.1429em;
        
        .btn {
            border-radius: 0;
            font-weight: bold;
        }
    }
}
.btn-default {
    &.btn-editCard {
      position: absolute;
      top: 0.1429rem;
      right: 1.0714rem;
      padding: 0.2857em 0.8571em;
    }
}
