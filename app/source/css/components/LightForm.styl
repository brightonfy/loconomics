/**
    LightForm style.

    It's just the common styles followed by 'all a form activities',
    may apply to any element (not just a 'form' element), but an activity or top-level '.container'
    is the best because of the background (or using a '.row' element so background fills all the width),
    and will change the standard appearance of other components, like SectionTitle's

    To receive custom styles, form elements must have a 'form-control' class (like Bootstrap).
**/
.LightForm {
    background: $gray-background;
    padding-bottom: 1.0714em;

    .SectionTitle {
//        text-transform: none;
//        text-align: center;
//        font-weight: bold;
//        margin-top: 1.0714em;
//        margin-bottom: 0.8571em;
          @media $mediaMinMd {
            margin-bottom: 0.8571em;
          }
    }

    // The toolbar, usually at the bottom and only one primary button,
    // that holds the main form buttons (submit/save, remove, quick without save).
    .LightForm-submitBar {
        margin-top: 1.7857em;
        margin-bottom: 1.7857em;
        margin-right: auto;
        margin-left: auto;

        .btn-col {
            margin-bottom: 0.3571em;
        }

        .btn-col:first-child {
            @media $mediaMinSm {
                padding-left: 0;
            }
        }

        .btn-col:last-child {
            @media $mediaMinSm {
                padding-right: 0;
            }
        }
    }

    // Container for a one line button/link that triggers a tool.
    // It adds some gap around on both axis, so can hold a btn-block
    // without take all the width an appear a submitBar and being separated
    // vertically too
    .LightForm-tool {
        margin: 1.7857em 0em;
    }

    textarea.form-control {
        resize: vertical;
    }

    // All form controls are white background
    .form-control {
        background: White;
    }
    // Disabled/read-only states must be different to prevent usability and accessiblity
    // problems (#308)
    .form-control[disabled],
    .form-control[readonly],
    fieldset[disabled] .form-control {
        background: $gray-lighter;
    }

    .LightForm-Section {
        margin: 1.0714em;
    }
    label {
        color: $gray-light;
    }
    > * .form-inline,
        .form-control{
            display: block;
            width: 100%;
    }
    > * .Select {
            position: relative;
            display: inline-block;
            vertical-align: bottom;
            select {
                padding-top: 0.5714em;
                padding-bottom: 0.5714em;
                padding-right: 2em;
                -webkit-appearance: none;
                background: white\0 !important;
                display: block;
                padding: 0.5714em 0.7143em;
                width: 100%;
                -webkit-transition: border-color 0.2s;
                -moz-transition: border-color 0.2s;
                -o-transition: border-color 0.2s;
                transition: border-color 0.2s;
                border: 0.0714rem solid #c4c4c4;
                -webkit-border-radius: 0.1429rem;
                -moz-border-radius: 0.1429rem;
                border-radius: 0.1429rem;
                background-color: #fff;
                color: #484848;
                border: 0.0714rem solid #c4c4c4;
                -webkit-border-radius: 0.1429rem;
                -moz-border-radius: 0.1429rem;
                border-radius: 0.1429rem;
                background-color: #fff;
                color: #484848;
            }

    }
    > * .Select:before {
            content: '\25bc';
            position: absolute;
            pointer-events: none;
            color: #767676;
            top: 0;
            bottom: 0.0714rem;
            padding-top: 0.7em;
            line-height: 1;
            right: 0;
            width: 2em;
            text-align: center;
            transform: scale(0.84, 0.42);
            -webkit-transform: scale(0.84, 0.42);
    }
    >* .Select-block {
        display: block;
        width: 100%;
//        @media $mediaMinMd {
//          display: inline-block;
//          width: auto;
//        }
    }
}
