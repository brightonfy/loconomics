/* ActivityNavbar.
   Ia a subclass of BS navbar.
   Its a navbar specific of an activity, placed on
   bottom.
*/

.ActivityNavbar {
    position: fixed;
    bottom: 0em;
    left: 0em;
    right: 0em;
    height: $app-navbar-height;
    @media $media-big-navbar {
        height: $big-navbar-height;
    }
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding-bottom: 0em;
    margin-bottom: 0em;

    background: White;
    border-color: transparent;
}
