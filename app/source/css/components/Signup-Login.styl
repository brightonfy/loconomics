.Signup-Login {
    .LeadContent {
        margin: 0px auto 30px auto;
        background: white;
        padding: 32px;
        color: $gray;
        h2 {
            margin-top: 0px;
            margin-bottom: 15px;
        }
        @media $mediaMinSm {
          max-width: 450px;
          margin: 30px auto;
          border: 1px solid #ccc;
        } 
    }
    .btn {
        padding: 22px 10px;
        font-size: 16px;
        font-weight: normal;
    }
    .btn-default {
        border: 1px solid $gray;
        color: $gray;
        margin-top: -4px;
        &:hover,
        &:focus,
        &:active {
            color: $brand-secondary;
            border-color: $brand-secondary;
        }
    }
    .fa {
        font-size: 34px !important;
        padding-left: 15px;
        margin-top: -9px;
    }
    .icon-right {
        padding-left: 0px;
        padding-right: 15px;
        margin-top: -50px;
    }
    .form-control {
        height: 64px;
        font-size: 16px;
        font-weight: normal;
        color: $gray;
        border: 1px solid $gray-light;
    }
    .form-control-feedback {
        position: relative;
    }
    .form-group {
        margin-right: 0px;
        margin-left: 0px;
        &.has-feedback {
          .form-control {
            padding-right: 50px;
          }
          label~.form-control-feedback{
              top 0px;
          }
        }
    }
    select {
        -webkit-appearance: none;
    }
}
.download-app {
    h2 {
        margin-top: 0px;
        margin-bottom: 15px;
        text-align: center;
    }
    ul {
      text-align: center;
      margin: 0 auto;
      padding-bottom: 10px;
      -webkit-padding-start: 0px;

      li {
        margin: auto;
        padding: 12px;
        vertical-align: middle;
      }
    }

    .Icon-appleStore {
        margin: 20px 8px;
        display: inline-block;
        width: 187px;
        height: 61px;
        background-size: 187px 61px;
        background-image: 
          linear-gradient(transparent, transparent),
          url('../images/Download_on_the_App_Store_Badge_US-UK_135x40.svg');
    }

    .Icon-googlePlay {
        margin: 20px 8px;
        display: inline-block;
        width: 187px;
        height: 61px;
        background-size: 187px 61px;
        background-image: url('../images/en-play-badge-border.png');
    }
}
