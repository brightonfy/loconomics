/**
    InfoTile: a two lines tile with an icon and text
    inside a link or not.
**/
@import 'Tile.styl'

InfoTile($linesNumber) {
    // Two lines
    $internalHeight = line-height-computed * $linesNumber;
    $gap = 1.2857rem;
    $heightLimit = $internalHeight + ($gap * 2);
    background: white;

    padding: $gap $Tile-hgap;

    // Style
    height: $heightLimit;
    overflow: hidden;

    .Tile-icon {
        float: left;
        width: 70px;
        text-align: center;
        &, > * {
            height: $internalHeight;
            line-height: $internalHeight;
            font-size:  1.7143rem;
        }
    }

    Tile-addContent($linesNumber);
}

.InfoTile {
    Tile()
    InfoTile(2)
}

.InfoTile-icon-right {
    Tile()
    InfoTile(2)
}

// Larger tile with 3 lines

.InfoTile3L {
    Tile()
    InfoTile(3)
}
