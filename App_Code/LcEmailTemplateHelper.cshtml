        return "background:none repeat scroll 0 0 #99C027;border-radius:4px 4px 4px 4px;-o-border-radius:4px 4px 4px 4px;-webkit-border-radius:4px 4px 4px 4px;-moz-border-radius:4px 4px 4px 4px;color:White;padding:.4em 1em;text-transform:lowercase;display:inline-block;text-decoration:none;";
